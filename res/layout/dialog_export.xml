<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_export"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/email_fuer_export_eingeben"
        android:textColor="@color/weiss"
        android:textSize="@dimen/TxtSizeInfoLeiste" />

    <EditText
        android:id="@+id/et_exportmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/TxtSizeSysBtn" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_export_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/jetzt_exportieren"
        android:textSize="@dimen/TxtSizeSysBtn" />

</LinearLayout>
